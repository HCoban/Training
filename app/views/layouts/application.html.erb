<!DOCTYPE html>
<html>
<head>
  <title>RedditOnRails</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <% if current_user %>
    <%= button_to "logout", session_url, method: :delete %>
  <% else %>
    <%= button_to "login", new_session_url, method: :get %>
  <% end %>
</header>


<% [:success, :errors].each do |key| %>
  <% if flash[key] %>
  <div class="<%= key %>" id="flash">
    <%= flash[key] %>
  </div>
  <% end %>
<% end %>

<%= yield %>

</body>
</html>
