<h3>Edit your Sub</h3>

<form action="<%= sub_url(@sub.id) %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <%= insert_authenticity_token %>
  New Title: <input type="text" name="sub[title]" value="<%= @sub.title %>">
  New Description: <input type="text" name="sub[description]" value="<%= @sub.description %>">
  <input type="submit" value="Update!">
</form>
